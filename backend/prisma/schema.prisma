datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Product {
  id          Int      @id @default(autoincrement())
  name        String
  description String
  price       Float
  image       String?
  sizes       Size[]
}

model Size {
  id        Int      @id @default(autoincrement())
  size      String
  sapNumber String
  price     Float
  productId Int
  product   Product  @relation(fields: [productId], references: [id], onDelete: Cascade) // Ensure cascading delete
}